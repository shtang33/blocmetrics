<%= form_for [registered_application] do |f| %>
  
  <%= form_group_tag(registered_application.errors[:title]) do %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter name of the application" %>
  <% end %>
  <%= form_group_tag(registered_application.errors[:url]) do %>
    <%= f.label :url %>
    <%= f.text_field :url, class: 'form-control', placeholder: "Enter the URL of the application" %>
  <% end %>
  <%= form_group_tag(registered_application.errors[:description]) do %>
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', placeholder: "Briefly describe the application here" %>
  <% end %>
  <div class = "form-group">
    <%= f.submit "Save", class: 'btn btn-success'%>
  </div>
<% end %>