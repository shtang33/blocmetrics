<h1><%= @registered_application.name %></h1>
<h4>URL: <%= link_to @registered_application.url %></h4>

<div class = "row">
  <div class = "col-md-8">
    <p><%= markdown_to_html @registered_application.description%></p>
    <%= pie_chart @registered_application.events.group(:name).count %>
    <% @event_groupings.each do |event_group| %>
      <small>
        <% event_grouped_name = event_group[0]%>
        <% events = event_group[1] %>
        <p>Event <%= event_grouped_name %> count: <%= events.count %></p>
          <% events.each do |e| %>
            <p><%= e.name %> <%= e.created_at %></p>
          <% end %>
      </small>
    <% end %>
  </div>

  <div class = "col-md-4">
    <% if policy(@registered_application).update? %>
      <%= link_to "Edit Application", edit_registered_application_path, class: 'btn btn-success'%>  
    <% end %>
    <% if policy(@registered_application).destroy?%>
      <%= link_to "Delete Application", @registered_application, method: :delete, class:' btn btn-danger', data: {confirm: 'Are you sure you want to delete this application?'} %>
    <% end %>
  </div>
</div>